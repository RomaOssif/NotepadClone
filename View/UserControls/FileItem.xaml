<UserControl x:Class="NotepadClone.View.UserControls.FileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NotepadClone.View.UserControls"
             mc:Ignorable="d" Height="150" Width="500"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="AntiqueWhite" />

        <TextBlock Text="{Binding Title}" FontSize="25" Margin="20" FontWeight="DemiBold"
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>
        
        <TextBlock Text="{Binding CreationDate}" FontSize="18" Margin="20" FontWeight="Light"
                   VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
